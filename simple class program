#include<iostream>

using namespace std;

class book
{
    public:
        int a;
        char b;
};
int main()
{
    book isis;
    isis.a=66;
    isis.b='c';
    cout<<isis.a<<endl<<isis.b;
}


/* simple constructor program   */

#include <iostream>

using namespace std;

class book
{
    public:
        int a;
        book(void);
};
book::book()
{
    a=56;
}
int main() {
   
   book book;
   cout<<book.a;
}



/*      simple object array program   */

#include <iostream>

using namespace std;

class student
{
    public:
        int rollno;
        char name[20];
}stud[5];
int main() {
   
   for(int i =0; i<2; i++)
   {
       cin>>stud[i].rollno;
       cin>>stud[i].name;
       
   }
   /* this is to print the details */
   for(int i=0;i<2;i++)
   {
       cout<<stud[i].rollno<<endl;
       cout<<stud[i].name<<endl;
   }
}


/* constructor inside the class   */

#include <iostream>

using namespace std;

class book
{
    public:
        int a;
        book(void)
        {
            a=46;
        }
};

int main() {
   
   book book;
   cout<<book.a;
}
